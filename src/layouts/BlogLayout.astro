---
import BlogLayout from '../../layouts/BlogLayout.astro';

const post = {
  title: "How AI Is Changing Marketing Videos",
  description: "A look at how AI speeds up production and lowers costs.",
  date: "2025-05-18",
  author: "Vizera Team"
};
---
<BlogLayout {...post}>
  <p>Welcome to the future of video production...</p>
</BlogLayout>

---
export interface Props {
  title: string;
  description?: string;
  date?: string;
  author?: string;
}

const { title, description, date, author } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title} | Vizera Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {description && <meta name="description" content={description} />}
  </head>
  <body class="font-sans text-gray-800 bg-white px-6 py-8 max-w-3xl mx-auto">
    <header class="mb-8 border-b pb-4">
      <h1 class="text-4xl font-bold">{title}</h1>
      {(author || date) && (
        <p class="text-sm text-gray-500 mt-2">
          {author && `By ${author}`} {author && date && ' · '} {date}
        </p>
      )}
    </header>

    <main class="prose prose-lg">
      <slot />
    </main>

    <footer class="mt-12 text-sm text-gray-400 border-t pt-4">
      © {new Date().getFullYear()} Vizera. All rights reserved.
    </footer>
  </body>
</html>
